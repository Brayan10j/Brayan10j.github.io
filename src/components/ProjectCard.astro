---
import { Button } from "./ui/button"

interface Props {
  title: string;
  description: string;
  technologies: string;
  href: string;
}

const { title, description, technologies, href } = Astro.props;
---

<div
  class="bg-card text-card-foreground rounded-lg shadow border flex flex-col justify-between"
>
  <div class="p-6">
    <h3 class="text-xl font-semibold text-indigo-400 mb-3">
      {title}
    </h3>
    <p class="text-muted-foreground mb-2">
      {description}
    </p>
    <p class="text-muted-foreground mb-4">
      <span class="font-semibold">Tecnolog√≠as:</span> {technologies}
    </p>
  </div>
  <div class="mt-4 p-6">
    <Button href={href} target="_blank">
      Ver Proyecto
      <svg
        class="w-5 h-5 ml-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
      >
    </Button>
  </div>
</div>
